<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="horizontal">

        <com.rejowan.cutebutton.CuteButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:padding="20dp"
            app:cb_bgColor="#0097A7"
            app:cb_bgColorFocus="#222"
            app:cb_borderRadius="40dp"
            app:cb_icon="@drawable/ic_baseline_star_24"
            app:cb_iconPadding="10dp"
            app:cb_iconSize="25dp"
            app:cb_text="Save"
            app:cb_textColor="#fff"
            app:cb_textSize="24sp"
            app:cb_textStyle="bold" />

        <com.rejowan.cutebutton.CuteButton
            android:layout_width="190dp"
            android:layout_height="50dp"
            android:layout_marginStart="5dp" />

    </LinearLayout>


</RelativeLayout>